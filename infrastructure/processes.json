            "watch": true,
            "merge_logs": false,
            "exec_mode": "cluster",
            "max_restarts": 10,
            "instances": 2,
            "max_memory_restart": "100M",
            "env": {
                "PORT": 3245,
                "NODE_ENV": "production"
            }
        }
    ]
}